@page "{id:int}"
@model BookDetailsModel
@{
    ViewData["Title"] = Model.Book?.Title ?? "书籍详情";
}
@if (Model.Book == null)
{
    <div class="alert alert-danger">未找到该书籍。</div>
}
else
{
    <div class="row justify-content-center my-4">
        <div class="col-md-6 col-12">
            <div class="card">
                <img src="~/Books/@Model.Book.CoverImage" class="card-img-top" alt="@Model.Book.Title 封面" style="object-fit:cover;height:400px;">
                <div class="card-body">
                    <h3 class="card-title">@Model.Book.Title</h3>
                    <p class="card-text">@Model.Book.Description</p>
                    <a href="@Model.Book.StripePaymentLink" class="btn btn-success btn-lg w-100 mt-3" target="_blank">立即购买</a>
                </div>
            </div>
        </div>
    </div>
}
