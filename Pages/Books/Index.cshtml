@page
@model BooksIndexModel
@{
    ViewData["Title"] = "电子书籍列表";
}

<h2 class="text-center my-4">电子书籍列表</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var book in Model.Books)
    {
        <div class="col">
            <div class="card h-100">
                <img src="~/Books/@book.CoverImage" class="card-img-top" alt="@book.Title 封面" style="object-fit:cover;height:300px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text">@book.Description</p>
                    <a asp-page="/Books/Details" asp-route-id="@book.Id" class="btn btn-primary mt-auto">查看详情</a>
                </div>
            </div>
        </div>
    }
</div>
